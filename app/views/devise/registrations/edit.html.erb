<div class="main__user_edit">
  <div class="main__user_edit__title">
    Edit account information
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    
    <% if (devise_error_messages! != "") %>
      <div class="devise_errors">
        <%= devise_error_messages! %>
      </div>
    <% end %>

    <div class="field">
      <div class="mylabel">
        Email:
      </div>
      <%= f.email_field :email, :class=>"myfield", autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <div class="mylabel">
        Username:
      </div>
      <%= f.text_field :username, :class=>"myfield", autofocus: true %>
    </div>

    <div class="field">
      <div class="mylabel">
        Password:
      </div>
      <%= f.password_field :password, :class=>"myfield", autocomplete: "off" %>
      <div class="myfieldlight">
        (leave blank if you don't want to change it)
      
        <% if @minimum_password_length %>
          <br />
          <%= @minimum_password_length %> characters minimum
        <% end %>
      </div>
    </div>

    <div class="field">
      <div class="mylabel">
        Password confirmation:
      </div>
      <%= f.password_field :password_confirmation, :class=>"myfield", autocomplete: "off" %>
    </div>

    <div class="field">
      <div class="mylabel">
        Current password:
      </div>
      <%= f.password_field :current_password, :class=>"myfield", autocomplete: "off" %>
      <div class="myfieldlight">
        (we need your current password to confirm your changes)
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Update account info", :class => "main__user_edit__btnUpdate" %>
    </div>
  <% end %>

  <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "main__user_edit__btnDelete" %>
</div>
